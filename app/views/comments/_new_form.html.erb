<%= form_for(@comment) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <%= hidden_field_tag :recipe_id, @recipe.id %>
  <div class="row">
    <div class="col-md-8">
      <div class="field">
        <%= f.text_area :content, placeholder: "コメントを追加..." %>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit "コメント", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>