<%= f.fields_for :ingredients do |i| %>
    <div class="row">
      <div class="col-9">
        <%= i.text_field :name, class: 'form-control mb-4', id:"ingredient_name" %>
      </div>
      <div class="col-3">
        <%= i.text_field :quantity, class: 'form-control mb-4', id:"ingredient_quantity" %>
      </div>
    </div>
<% end %>