<% provide(:title, "投稿レシピ") %>
<div class="container user">
  <%= render "layouts/profile_tabs" %>
  <div class="user-view">
    <div class="user-view-box">
      <div class="update-content">
        <h5>投稿レシピ一覧 (<%= @user.recipes.count %>件)</h5> 
      </div>
      <div class="pagination">
        <%= paginate @recipes %>
      </div>
      <div class="container">
          <%= render partial: 'recipes/recipe', collection: @recipes, as: "recipe" %>
      </div>
    </div>
  </div>
</div>


