<% provide(:title, @title) %>
<div class="container user">
  <div class="user-view">  
    <div class="user-view-box">
      <div class="update-content">
        <div class="row">
          <% if @user.user_image.attached? %>
            <%= image_tag @user.user_image.variant(resize:'400x400').processed, class:"icon-image host-icon" %>
          <% else %>
            <img alt="アイコン画像" class="icon-image host-icon" src="../../assets/default_icon.jpg">
          <% end %>      
          <div class="mx-3 mt-3">
            <h2><%= @user.name %></h1>
            <p class="text-center"><%= link_to "プロフィール", @user %></p>
            <%= render 'shared/stats' %>
          </div>
        </div>
        <div class="mt-5">
          <h3><%= @title %></h3>
        </div>
        <% if @users.any? %>
          <div class="row mt-4">
            <%= render @users %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>