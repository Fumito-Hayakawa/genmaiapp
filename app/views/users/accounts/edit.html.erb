<div class="container user">
  <ul class="nav nav-tabs">
    <li class="nav-item"><%= link_to 'プロフィール', user_profile_path(current_user.id,current_user.id), class: "nav-link active" %></li>
    <li class="nav-item"><%= link_to 'アカウント', user_account_path(current_user.id,current_user.id), class: "nav-link" %></li>
  </ul>
  <div class="user-view">
    <div class="user-view-box">
      <div class="update-content">
        <div class="row">
          <h5>アカウント情報編集</h5>
        </div>
      </div>
        <%= form_with model: @user, url: user_account_path, class: "edit-account", local: true do |f| %>
          <div class="update-content">
            <div class="row">
              <%= f.label :email, 'メールアドレス', class:"col-md-3" %>
              <%= f.text_field :email, class: "form-control mb-4 col-md-9" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :password, '変更後パスワード（変更する場合のみ入力）', class:"col-md-3" %>
              <%= f.text_field :password, class: "form-control mb-4 col-md-9", placeholder: "パスワードを入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.label :password_confirmation, '変更後パスワード確認用（変更する場合のみ入力）', class:"col-md-3" %>
              <%= f.text_field :password_confirmation, class: "form-control mb-4 col-md-9", placeholder: "パスワードを入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.submit "更新", class:"col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
